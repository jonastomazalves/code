<% @albuns.each do |album| %>
  <h2><%= link_to album.titulo, "albuns/"+album.id.to_s() %></h2>
  
  <p>
    <%= image_tag Album.find_one_image(album.id) %>
  </p>
  
  <p>
    <%= auto_link simple_format album.descricao %>
  </p>
  
  <p>
    <em>Publicado em <%= date_format(album.data) %></em>
  </p>
  <br />
<% end %>

