<h1>Álbums</h1>

<table>
  <tr>
    <th>Título</th>
    <th>Descrição</th>
    <th>Data</th>
    <th>Tipo</th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= link_to album.titulo, album %></td>
    <td><%= album.descricao[0..20]+"..." %></td>
    <td><%= date_format(album.data) %></td>
    <td><%= album.tipo %></td>
    <td><%= link_to 'Editar', edit_album_path(album) %></td>
    <td><%= link_to 'Apagar', album, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Inserir Álbum', new_album_path %>
