<!DOCTYPE html>
<html>
  <head>
    <title>Oscartes</title>
    <% if current_user %>
      <%= stylesheet_link_tag "admin" %>
      <%= javascript_include_tag :defaults %>
    <% else %>
      <%= stylesheet_link_tag "site" %>
      <%= javascript_include_tag "jquery" %>
      <%= javascript_include_tag "javascript" %>
    <% end %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="upper">
      <div id="title">
        <% if current_user %>
          <p><span id="blue">Osc</span><span id="green">ar</span><span id="yellow">tes</span></p>
        <% else %>
          <a href="/"><span id="blue">Osc</span><span id="green">ar</span><span id="yellow">tes</span></a>
        <% end %>
      </div>
    
      <div id="menu">
        <ul>
          <% if current_user %>
            <li><%= link_to 'Álbuns', '/albums' %></li>
            <li><%= link_to 'Imagens', '/images' %></li>
            <li><%= link_to 'Notícias', '/news' %></li>
            <li><%= link_to 'Usuário', edit_user_path(current_user) %></li>
            <li><%= link_to 'Logout', '/logout' %></li>
          <% else %>
            <li><%= link_to 'Álbuns', '/albuns' %></li>
            <li><%= link_to 'Notícias', '/noticias' %></li>
            <li><%= link_to 'Eventos', '/eventos' %></li>
          <% end %>
        </ul>
      </div>
    </div>
    
    <div id="container">
      
      <div id="content">
        <% if notice %>
          <div id="notice"><%= notice %></div>
        <% end %>
        
        <%= yield %>
      </div>
      
    </div>
    
    <div id="footer">
      <p>Oscartes® - Todos os diretos reservados</p>
      <p>Desenvolvido por <a href="http://www.dcc.ufrj.br/~juliobueno" target="_blank">Júlio Bueno</a><p>
    </div>

  </body>
</html>
