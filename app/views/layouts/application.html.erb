<!DOCTYPE html>
<html>
  <head>
    <title>Pintor</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="content">
    
      <div id="menu">
        <ul>
          <% if current_user %>
            <li><%= link_to 'Álbuns', '/albuns' %></li>
            <li><%= link_to 'Notícias', '/noticias' %></li>
            <li><%= link_to 'Usuário', edit_user_path(current_user) %></li>
            <li><%= link_to 'Logout', '/logout' %></li>
          <% else %>
            <li><%= link_to 'Álbuns', '/albuns' %></li>
            <li><%= link_to 'Notícias', '/noticias' %></li>
          <% end %>
        </ul>
      </div>

      <div id="container">
        <% if notice %>
          <div id="notice"><%= notice %></div>
        <% end %>
        <%= yield %>
      </div>

  </body>
</html>
